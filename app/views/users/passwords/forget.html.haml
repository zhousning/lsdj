- provide(:title, t('.title'))

.signin-wrap
  = devise_error_messages!
  .form-signin.shadow.px-5.bg-white
    = form_for(@user, url: update_password_path(@user), html: {method: :patch}) do |f|
      -#
        = f.hidden_field :inviter
      .text-center.mb-4.mt-3
        = link_to root_path do
          = image_tag "logo.svg", :width => "100px"
        %h1.h3.my-3.font-weight-normal
          重置密码
      .form-group.row
        %label.col-3.col-form-label.text-right{:for => "inputPhone"} 电话: 
        .col-9
          = f.phone_field :phone, autofocus: true, :id => "inputPhone", :class => "form-control", :placeholder => "请输入手机号", :value => ""
      .form-group.row
        %label.col-3.col-form-label.text-right{:for => "inputPhone"} 密码: 
        .col-9
          = f.password_field :password, autocomplete: "off", :id => "inputPassword", :class => "form-control", :required => "", :placeholder => "请输入密码"
      .form-group.row
        %label.col-3.col-form-label.text-right{:for => "inputPhone"} 确认密码: 
        .col-9
          = f.password_field :password_confirmation, autocomplete: "off", :id => "confirmPassword", :class => "form-control", :required => "", :placeholder => "确认密码"
      .form-group.row
        .col-7
          = text_field_tag 'confirm_code', nil, :class => "form-control"
        .col-5.pl-0.text-right
          %button#send-confirm-code.button.button-royal.button-rounded{:type => "button"}
            验证码
      %p.d-flex.justify-content-end
        = link_to "登 录", new_user_session_path, :class => "text-primary"
      = f.submit "重 置", class: "button button-glow button-border button-rounded button-royal button-large btn-block"
