        .card-body
          .container-fluid.p-0
            .row
              .col-md-12
                = bar_chart bar_statistics_path, legend: "right", label: @bar_title[:label],  title: @bar_title[:title], xtitle: @bar_title[:xtitle], ytitle: @bar_title[:ytitle], download: {background: "#ffffff"}, colors: @bar_title[:colors]
      .card.shadow.rounded-0.mb-3
        .card-header.bg-info.text-white.rounded-0
          = fa_icon "pie-chart", text: @pie_title[:title]
        .card-body
          .container-fluid.p-0
            .row
              .col-md-12
                = pie_chart pie_statistics_path, legend: "right", label: @pie_title[:label],  title: @pie_title[:title], xtitle: @pie_title[:xtitle], ytitle: @pie_title[:ytitle], download: {background: "#ffffff"}
      .card.shadow.rounded-0.mb-3
        .card-header.bg-warning.text-white.rounded-0
