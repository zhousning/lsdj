          .container-fluid.p-0
            .row
              .col-md-12
                = area_chart area_statistics_path, legend: "right", label: @area_title[:label],  title: @area_title[:title], xtitle: @area_title[:xtitle], ytitle: @area_title[:ytitle], download: {background: "#ffffff"}, colors:  @area_title[:colors]
