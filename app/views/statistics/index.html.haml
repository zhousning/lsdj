- provide(:title, t('.title'))

.container-fluid
  .row
    = render "layouts/control_sidebar"
    %main.col-md-9.ml-sm-auto.col-lg-10.p-3{:role => "main"}
      .card.shadow.rounded-0.mb-3
        .card-header.bg-primary.text-white.rounded-0
          = fa_icon "line-chart", text: @line_title[:title]
        .card-body
          .container-fluid.p-0
            .row
              .col-md-12
                = line_chart line_statistics_path, legend: "right", label: @line_title[:label],  title: @line_title[:title], xtitle: @line_title[:xtitle], ytitle: @line_title[:ytitle], download: {background: "#ffffff"}, colors: @line_title[:colors]
      .card.shadow.rounded-0.mb-3
        .card-header.bg-primary.text-white.rounded-0
          = fa_icon "line-chart", text: "多序列" 
        .card-body
          .container-fluid.p-0
            .row
              .col-md-12
                = line_chart series_statistics_path 
      .card.shadow.rounded-0.mb-3
        .card-header.bg-danger.text-white.rounded-0
          = fa_icon "bar-chart", text: @column_title[:title]
        .card-body
          .container-fluid.p-0
            .row
              .col-md-12
                = column_chart column_statistics_path, legend: "right", label: @column_title[:label],  title: @column_title[:title], xtitle: @column_title[:xtitle], ytitle: @column_title[:ytitle], download: {background: "#ffffff"}, colors: @column_title[:colors]
      .card.shadow.rounded-0.mb-3
